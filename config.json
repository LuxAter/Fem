{
  "CXX": "clang++",
  "CC": "clang",
  "CCIGNORE": "",
  "CXXIGNORE": "",
  "CCFLAGS": ["-fPIC -Wall -Wpedantic --static"],
  "CXXFLAGS": ["-std=c++17", "-fPIC", "-Wall", "-Wpedantic", "--static", "-O3"],
  "LINK": "-lz -llua5.3",
  "source": "src",
  "include_dir": "include",
  "include": ["-I$(ROOT)/$(BUILD)/libpng/include", "-I/usr/include/lua5.3/"],
  "build": "build",
  "fem": {
    "path": "fem",
    "files": "src/main.cpp",
    "dep": ["libfem.a"],
    "group": "main",
    "type": "exe"
  },
  "libfem.a": {
    "path": "$(BUILD)/libfem.a",
    "files_exclude": "src/main.cpp",
    "files": "src/*.cpp",
    "dep": ["libpng.a"],
    "join": true,
    "type": "lib"
  },
  "libpng.a": {
    "path": "$(ROOT)/{{build}}/libpng.a",
    "source": "libpng",
    "type": "aumake"
  }
}
